print("Welcome to the Computer Test!")

playing = input("Are you ready to play? ")
if playing.lower() != "yes":
    print("Have a good day!")
    quit()

print("Yay! Let's play!")
score = 0

answer = input("What does SSD stand for? ")
if answer.lower() == "solid state drive":
    print("Correct")
    score = score + 1
else:
    print("Incorrect")

answer = input("What does RAM stand for? ")
if answer.lower() == "random access memory":
    print("Correct")
    score = score + 1
else:
    print("Incorrect")

answer = input("What do you call a portable computer? ")
if answer.lower() == "laptop":
    print("Correct")
    score = score + 1
else:
    print("Incorrect")

answer = input("What does WWW stand for? ")
if answer.lower() == "world wide web":
    print("Correct")
    score = score + 1
else:
    print("Incorrect")

answer = input("What is the most common programming language? ")
if answer.lower() == "javascript" or answer.lower() == "java":
    print("Correct")
    score = score + 1
else:
    print("Incorrect")

answer = input("What does PDF stand for? ")
if answer.lower() == "portable document format":
    print("Correct")
    score = score + 1
else:
    print("Incorrect")

print("You have completed the quiz!")
if score >= 4:
    print("Congratulations! You scored " + str(score) + " points!")
else:
    print("Better luck next time! You scored " + str(score) + " points!")
